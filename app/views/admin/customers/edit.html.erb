<div class="bg-primary-600 dark:bg-primary-800 p-2 sm:p-3 shadow-md flex flex-row flex-wrap items-center gap-2">
  
  <div class="flex flex-row">
  <%= link_to "<", admin_customers_path, class: "text-lg sm:text-xl font-medium text-white" %>
  <h1 class="text-lg sm:text-xl font-medium text-white">Editing <%= @customer.name %></h1>
  </div>
  
  <div class="flex flex-row gap-2 ml-auto">
  <%= link_to "Edit Customer", edit_admin_customer_path(@customer), class: "text-center text-gray-50 border-2 p-2 hover:bg-white hover:text-primary-600 border-white rounded-md text-sm font-medium hover:font-strong hover:shadow-md" %>
  <%= button_to "Delete Customer", admin_customer_path(@customer), method: :delete, class: "text-center text-gray-50 border-2 p-2 hover:bg-white hover:text-primary-600 border-white rounded-md text-sm font-medium hover:font-strong hover:shadow-md" %>
  </div>

</div>
<div>
  <%= render AlertComponent::Errors.new(@customer)%>
  <%= render "form", customer: @customer, path: admin_customer_path(@customer) %>
</div>
<br>
</div>
