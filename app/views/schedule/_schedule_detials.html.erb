<turbo_frame >
  <div id="defaultModal" tabindex="-1" aria-hidden="true" class="overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-modal md:h-full">
    <div class="relative p-4 w-full max-w-2xl h-full md:h-auto">
      <!-- Modal content -->
      <div class="relative p-4 bg-white rounded-lg shadow dark:bg-gray-800 sm:p-5">
        <!-- Modal header -->
        <div class="flex justify-between items-center pb-4 mb-4 rounded-t border-b sm:mb-5 dark:border-gray-600">
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white">
            Service job details
          </h3>
          <div>
            <%= render partial: 'edit_user_service_job'%>
          </div>
          <%= link_to schedule_path(display_modal: false ), data: { turbo_stream: true } do %>
            <svg aria-hidden="true" class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
              <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
            </svg>
            <span class="sr-only">Close modal</span>
          <% end %>
        </div>
        <div class="flex rounded p-6">
          <ul class="grid grid-cols-2 gap-4">
            <li class="mb-4 font-semibold">Technician</li>
            <li class="mb-4"><%= @user.name %></li>
            <li class="mb-4 font-semibold">Phone</li>
            <li class="mb-4"><%= @user.work_phone %></li>
            <li class="mb-4 font-semibold">Service Job</li>
            <li class="mb-4"><%= @service_job.job_number %></li>
            <li class="mb-4 font-semibold">Description</li>
            <li class="mb-4"><%= @service_job.description %></li>
            <li class="mb-4 font-semibold">Work Type</li>
            <li class="mb-4"><%= @service_job.work_type %></li>
            <li class="mb-4 font-semibold">Customer</li>
            <li class="mb-4"><%= @customer.name %></li>
            <li class="mb-4 font-semibold">Phone</li>
            <li class="mb-4"><%= @customer.phone_number %></li>
            <li class="mb-4 font-semibold">Email</li>
            <li class="mb-4"><%= @customer.email %></li>
            <% if @work_site.present? %>
              <li class="mb-4 font-semibold">Work Site</li>
              <li class="mb-4"><%= @work_site.name %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</turbo_frame>
