<turbo_frame >
  <div id="defaultModal" tabindex="-1" aria-hidden="true" class="overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-modal md:h-full">
    <div class="relative p-4 w-full max-w-2xl h-full md:h-auto">
      <!-- Modal content -->
      <div class="relative p-4 bg-white rounded-lg shadow dark:bg-gray-800 sm:p-5">
        <!-- Modal header -->
        <div class="flex justify-between items-center pb-4 mb-4 rounded-t border-b sm:mb-5 dark:border-gray-600">
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white">
            Service job details
          </h3>

          <%= link_to schedule_path(display_modal: false ), data: { turbo_stream: true } do %>
            <svg aria-hidden="true" class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
              <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
            </svg>
            <span class="sr-only">Close modal</span>
          <% end %>
        </div>

        <div class="flex rounded">
          <div class="flex flex-col">
            <div class="mb-4 flex flex-col">
              <p class="font-semibold mb-1">Technician</p>
              <p class="ml-1"><%= @user.name %></p>
            </div>
            <div class="mb-4 flex flex-col">
              <p class="font-semibold mb-1">Service Job</p>
              <p class="ml-1"><%= @service_job.job_number %></p>
            </div>
            <div class="mb-4 flex flex-col">
              <p class="font-semibold mb-1">Date</p>
              <p class="ml-1"><%= @user_service_job.date %></p>
            </div>
            <div class="mb-4 flex flex-col">
              <p class="font-semibold mb-1">Time</p>
              <p class="ml-1"><%= @user_service_job.start_time %> - <%= @user_service_job.end_time %></p>
            </div>
            <div class="mb-4 flex flex-col">
              <p class="font-semibold mb-1">Customer</p>
              <p class="ml-1"><%= @customer.name %></p>
            </div>
            <% if @work_site.present? %>
              <div class="mb-4 flex flex-col">
                <p class="font-semibold mb-1">Work Site</p>
                <p class="ml-1"><%= @work_site.name %></p>
              </div>
            <% end %>
            <div class="mb-4 flex flex-col">
              <p class="font-semibold mb-1">Description</p>
              <p class="ml-1"><%= @service_job.description %></p>
            </div>
          </div>

          <div class="">
            <details class="flex">
              <summary class="ml-auto flex">
                <span class="ml-auto hover:cursor-pointer inline-flex py-2.5 px-5 text-sm font-medium text-gray-500 focus:outline-none bg-white rounded-md border-2 border-gray-200 hover:bg-primary-600 hover:border-primary-600 hover:shadow-md hover:text-gray-50 focus:z-10 focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700"">
                  Edit scheduled time?
                </span>
              </summary>
              <%= render partial: 'edit_user_service_job'%>
            </details>
          </div>

        </div>
      </div>
    </div>
  </div>
</turbo_frame>
