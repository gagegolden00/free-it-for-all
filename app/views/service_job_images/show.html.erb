<div class="bg-primary-600 dark:bg-primary-800 p-2 sm:p-3 shadow-md flex flex-row items-center h-16">
  <%= link_to "<", :back, class: 'mr-2 font-semibold text-xl text-white' %>
  <h1 class="text-lg sm:text-xl font-medium text-white">Image view </h1>
</div>

<div class="flex items-start mt-2 border justify-around dark:bg-gray-600 p-3">
  <div>
    <p>Uploaded by:</p>
    <p class="border rounded"><%= @service_job_image.user.name %></p>
  </div>
  <div>
    <p>Date Uploaded:</p>
    <p class="pt-1 pb-3 border rounded"><%= @service_job_image.created_at.strftime("%B %d, %Y") %></p>
  </div>
  <div class="border rounded">
    <p class="pb-.5">Description</p>
    <p><%= @service_job_image.description %></p>
  </div>
</div>

<div class="border mt-4">
  <section class="p-4">
    <div class="border-4 flex items-center justify-center">
      <% if @service_job_image.image_url %>
        <%= image_tag @service_job_image.image_url, class: "" %>
      <% end %>
    </div>
  </section>
</div>




