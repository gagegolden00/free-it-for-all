<div id="new-customer-form" class ="m-2 sm:m-4 lg:mx-auto max-w-3xl">
  <%= form_with(model: @customer, url: path, local: true, html: {class: "border rounded p-3 text-sm bg-white dark:bg-gray-800 border-gray-300 dark:border-gray-500"}) do |form| %>
    <p class="font-semibold text-lg mt-1 mb-2">Customer Information</p>
    <div class="flex flex-col gap-2">
      <%= form.label :name, class: "block text-sm font-medium text-gray-900 dark:text-white" %>
      <%= form.text_field :name, required: true, class: "mb-2 shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 dark:shadow-sm-light" %>
      <%= form.label :phone_number, class: "block text-sm font-medium text-gray-900 dark:text-white" %>
      <%= form.text_field :phone_number, class: "mb-2 shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 dark:shadow-sm-light" %>
      <%= form.label :email, class: "block text-sm font-medium text-gray-900 dark:text-white" %>
      <%= form.email_field :email, class: "mb-2 shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 dark:shadow-sm-light" %>
      <%= form.label :region, class: "block text-sm font-medium text-gray-900 dark:text-white" %>
      <%= form.collection_select :region_id, @regions, :id, :name, {}, { selected: @customer.region.present? ? @customer.region : nil  ,  class: "mb-2 shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 dark:shadow-sm-light" } %>
      <%= form.label :address, class: "block text-sm font-medium text-gray-900 dark:text-white" %>
      <%= form.text_field :address, class: "mb-2 shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 dark:shadow-sm-light" %>
      <%= form.label :city, class: "block text-sm font-medium text-gray-900 dark:text-white" %>
      <%= form.text_field :city, class: "mb-2 shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 dark:shadow-sm-light" %>
      <%= form.label :state, class: "block text-sm font-medium text-gray-900 dark:text-white" %>
      <%= form.select :state, @states,{}, { selected: @customer.state, class: "mb-2 shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 dark:shadow-sm-light" } %>
      <%= form.label :zip_code, class: "block text-sm font-medium text-gray-900 dark:text-white" %>
      <%= form.text_field :zip_code, class: "mb-2 shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 dark:shadow-sm-light" %>
    </div>
    <div data-controller="toggle-hidden change-text" class=" mt-2">
      <button
        data-action="click->toggle-hidden#toggleVisibility click->toggle-hidden#toggleDisabled"
        data-target-id="pointOfContactFields"
        type="button"
        class="rounded-md block text-center text-gray-500 border-2 p-2 border-gray-200 hover:bg-primary-600 hover:border-primary-600 hover:shadow-md hover:text-gray-50 focus:z-10 focus:ring-0 focus:ring-gray-200 dark:focus:ring-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700">
        Add new point of contact
      </button>
    </div>
    <fieldset id="pointOfContactFields" class="flex flex-col hidden" disabled="true">
      <p class="font-semibold text-lg mt-2 mb-2">Point of Contact Information</p>
      <%= form.fields_for :point_of_contact do |f| %>
        <%= f.label :name, class: "block text-sm font-medium text-gray-900 dark:text-white" %>
        <%= f.text_field :name, class: "mb-2 shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 dark:shadow-sm-light" %>
        <%= f.label :phone_number, class: "block text-sm font-medium text-gray-900 dark:text-white" %>
        <%= f.text_field :phone_number, class: "mb-2 shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 dark:shadow-sm-light" %>
        <%= f.label :email, class: "block text-sm font-medium text-gray-900 dark:text-white" %>
        <%= f.email_field :email, class: "mb-2 shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 dark:shadow-sm-light" %>
      <% end %>
    </fieldset>
    <%= form.submit class: "py-2.5 px-5 my-5 text-sm font-medium text-gray-500 focus:outline-none bg-white rounded-lg border-2 items-center border-gray-200 hover:bg-primary-600 hover:border-primary-600 hover:shadow-md hover:text-gray-50 focus:z-10 focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700" %>
  </div>
<% end %>
</div>
